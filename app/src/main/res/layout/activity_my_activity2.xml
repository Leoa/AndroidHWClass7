

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MyActivity"
android:background="@drawable/fouractivitybg">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="74dp"
        android:layout_height="84dp"
        android:id="@+id/imageView2"
        android:layout_gravity="left|top"
        android:src="@drawable/distance" />

    <ImageView
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/directions" />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="250dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:id="@+id/imageButton"
            android:background="@drawable/turtle"
            android:layout_gravity="left|bottom" />

        <ImageButton
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="41dp"
            android:id="@+id/imageButton"
            android:src="@drawable/clock"
            android:onClick="secondActivityClick"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/exclaim"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:src="@drawable/trafficjam" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/police" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView5"
            android:layout_gravity="right|top"
            android:src="@drawable/accident" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView6"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/hazard" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView7"
            android:layout_gravity="center"
            android:src="@drawable/cameras" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView8"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/chitchat" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView9"
            android:layout_gravity="left|bottom"
            android:src="@drawable/police" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView10"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/pave" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView11"
            android:layout_gravity="right|bottom"
            android:src="@drawable/checkin" />

    </FrameLayout>
</LinearLayout>

</LinearLayout>